@model RequestManager.Web.Models.Enitities.RequestDto

@{
    ViewBag.Title = "Add New Request";
}

<div class="modal fade" id="addRequest">
<div class="modal-dialog">
<div class="modal-content">
    <div class="modal-header" style="background-color: lightgray;">
        <h5 class="modal-title" id="addRequestLaber">Add Request</h5>
        <button class="close" data-bs-dismiss="modal" area-hidden="true" >X</button>
    </div>
    <div class="modal-body">
        <form action="Create">
            
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.Priority)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Priority, new[] { new SelectListItem() { Text = "Low", Value = "1" },
                new SelectListItem() { Text = "Medium", Value = "2" }, new SelectListItem() { Text = "High", Value = "3" },
                new SelectListItem() { Text = "Critical", Value = "4" }})
                @Html.ValidationMessageFor(model => model.Priority)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.SubDepartmentId)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.SubDepartmentId, ViewBag.SubDepartments as SelectList)
                @Html.ValidationMessageFor(model => model.SubDepartmentId)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.CategoryId)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as SelectList)
                @Html.ValidationMessageFor(model => model.CategoryId)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.File)
            </div>
            <div class="editor-field">
                <input type="file" id="error" name="error" />
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(model => model.Comment)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Comment)
                @Html.ValidationMessageFor(model => model.Comment)
            </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-save="modal">Save</button>
             <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
    </form>
    </div>
</div>
</div>
</div>


