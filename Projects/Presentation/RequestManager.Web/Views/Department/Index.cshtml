@model RequestManager.Web.Models.Enitities.DepartmentDTO

 <h2>Departments</h2>

 @using(Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>New department:</legend>
        <div class="editor-label">
            @Html.LabelFor(x => x.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <p><input type="submit" value="Add department" /></p>
    </fieldset>
}

<table>
    @foreach (var item in ViewBag.Departments)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a asp-asp-controller="Department" asp-action="DeleteDepartment" asp-route-id ="@item.Id"
            onclick="return confirm('Are you sure you want to delete department?');">Delete</a></td>
            @*<td>@Html.ActionLink("Delete", "DeleteDepartment", new { id=item.Id })</td>*@
        </tr>
    }
</table>