
<header>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">

        <a class="navbar-brand" asp-area="" asp-controller="Request" asp-action="Index">RequestManager</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
  
         @if (this.User.IsInRole("admin"))
         {
             @await Html.PartialAsync("~/Views/Shared/RolePartial/AdminPartial.cshtml")
         }
         @if (this.User.IsInRole("moderator"))
         {
             @await Html.PartialAsync("~/Views/Shared/RolePartial/ModeratorPartial.cshtml")
         }
         @if (this.User.IsInRole("executor"))
         {
             @await Html.PartialAsync("~/Views/Shared/RolePartial/ExecutorPartial.cshtml")
         }

         @if (this.User.IsInRole("user"))
         {
             @await Html.PartialAsync("~/Views/Shared/RolePartial/UserPartial.cshtml")
         }

        @if (this.User.Identity.IsAuthenticated)
        {
            <div class="navbar">
                <ul class="navbar-nav">
                      <li class="nav-item">
                            <p class="nav-link"> Hello @this.User.Identity.Name</p>
                       </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        }

    </div>
</nav>
</header>